<article>
    <h3><a href="{{settings.url}}/post/{{slug}}">{{title}}</a></h3>
    <span class="glyphicon glyphicon-user"></span> {{author}}
    &nbsp;&nbsp;
    <span class="glyphicon glyphicon-time"></span> {{dated}}

    {{#showbody}}
        <hr>
        <p class="post-content">{{{body}}}</p>
        <br/>

        <div class="post-info">
            {{#category}}
                <span class="glyphicon glyphicon-folder-open"></span> &nbsp;
                <a href="{{settings.url}}/category/{{categoryslug}}">{{category}}</a>
                &nbsp;&nbsp;
            {{/category}}

            <span class="glyphicon glyphicon-bookmark"></span>

            {{#tags}}
                <a href="{{settings.url}}/tag/{{.}}">{{.}}</a>&nbsp;&nbsp;
            {{/tags}}
        </div>

    {{/showbody}}
    <hr>
</article>
